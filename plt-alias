# Put this in .bashrc

# Alias the following binaries in your $PATH to this script:
# alias drracket="plt-bin"
# alias drschem="plt-bin"
# alias gracke="plt-bin"
# alias gracket-tex="plt-bin"
# alias mre="plt-bin"
# alias mred-tex="plt-bin"
# alias mzschem="plt-bin"
# alias racke="plt-bin"
# alias rac="plt-bin"
# alias scribbl="plt-bin"
# alias slate="plt-bin"
# alias slidesho="plt-bin"
function plt() {

   if [[ $# == 0 ]]; then
       echo "PLTHOME = $PLTHOME"
   elif [[ $# == 1 ]]; then
       if [[ -d "$1" ]] ; then
           DIR=`cd "$1"; pwd -P`
           export PLTHOME="$DIR"
           export TEXINPUTS="$PLTHOME"/collects/slatex:
           export PLTPLANETDIR="$PLTHOME"/add-on/planet
           export PLTADDONDIR="$PLTHOME"/add-on
       else
           echo "ERROR: '$1' does not exist."
           false
       fi
   else
       echo "ERROR: expected 'plt' or 'plt <DIR>', got 'plt $*'"
       false
   fi

}
